<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{artistInfo.artistName}} - Music Information</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Music Mashup</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Search Another Artist</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container my-4">
    <!-- Artist Information -->
    <div class="text-center mb-4">
      <h1>{{artistInfo.artistName}}</h1>
      {{#artistImage}}
        <img src="{{artistImage}}" alt="{{artistInfo.artistName}}" class="img-fluid rounded mb-3" style="max-width: 200px;">
      {{/artistImage}}
      <p class="text-muted">{{artistInfo.primaryGenreName}}</p>
      <a href="{{artistInfo.artistLinkUrl}}" target="_blank" class="btn btn-primary">View on iTunes</a>
    </div>

    <!-- Top Albums Section -->
    <h2 class="mt-5">Top Albums</h2>
    <div class="row">
      {{#topAlbums}}
        <div class="col-md-4">
          <div class="card mb-3 shadow-sm">
            <img src="{{cover_medium}}" class="card-img-top" alt="{{title}}">
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <p class="card-text text-muted">Released: {{release_date}}</p>
            </div>
          </div>
        </div>
      {{/topAlbums}}
    </div>

    <!-- Songwriters Section -->
    <h2 class="mt-5">Songwriters</h2>
    <ul class="list-group mb-4">
      {{#songwriters}}
        <li class="list-group-item">{{name}}</li>
      {{/songwriters}}
    </ul>

    <!-- Related Artists Section -->
    <h2 class="mt-5">Related Artists</h2>
    <ul class="list-group mb-4">
      {{#relatedArtists}}
        <li class="list-group-item">{{name}}</li>
      {{/relatedArtists}}
    </ul>

    <!-- Navigation Buttons -->
    <div class="text-center">
      <a href="/" class="btn btn-secondary">Search Another Artist</a>
      <button onclick="window.history.back()" class="btn btn-outline-secondary ms-2">Go Back</button>
    </div>
  </div>

  <!-- Bootstrap JavaScript Bundle -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
